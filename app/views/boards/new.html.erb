<div class="d-flex align-items-center">
  <h1>新規投稿画面</h1>
  <div class="ml-auto boards_linkBox">
    <a href="/boards" class="btn btn-outline-dark">投稿一覧</a>
  </div>
</div>

<%= form_with model: @board do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create Board', class: "btn btn-success" %>
  </div>
<% end %>

