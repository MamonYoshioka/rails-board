<div class="d-flex align-items-center">
  <h1>編集画面</h1>
  <div class="ml-auto boards_linkBox">
    <%= link_to '投稿一覧', boards_path , class: 'btn btn-outline-dark' %>
  </div>
</div>

<%= form_with model: @board do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control", rows: 10 %>
  </div>

  <div class="form-group">
    <%= form.submit 'Update Board', class: "btn btn-dark" %>
  </div>
<% end %>

