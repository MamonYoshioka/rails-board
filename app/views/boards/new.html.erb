<h1>新規投稿画面</h1>

<%= form_with model: @board do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create Board', class: "btn btn-success" %>
  </div>
<% end %>